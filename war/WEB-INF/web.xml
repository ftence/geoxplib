<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <!--  Guice boostraping -->
  <servlet>
    <servlet-name>GuiceBootstrap</servlet-name>
    <servlet-class>com.geocoord.server.servlet.GuiceBootstrap</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>CoverageServiceServlet</servlet-name>
    <servlet-class>com.geocoord.server.servlet.CoverageServiceServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CoverageServiceServlet</servlet-name>
    <url-pattern>/geocoord/coverage</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>GeoCoord.html</welcome-file>
  </welcome-file-list>

</web-app>
