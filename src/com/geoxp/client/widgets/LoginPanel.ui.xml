<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
             
  <ui:with field='images'    type='com.geocoord.client.widgets.LoginPanelImages' />
  <ui:with field='messages'  type='com.geocoord.client.widgets.i18n.messages.LoginPanelMessages' />
  <ui:with field='resources' type='com.geocoord.client.widgets.LoginPanelResources' />
  
  <g:FlowPanel ui:field='root' stylePrimaryName='{resources.css.loginPanelRoot}' >
    <g:Image ui:field='logo' stylePrimaryName={resources.css.loginPanelLogo}' />
    <g:PushButton ui:field='twitterLogin' stylePrimaryName='{resources.css.loginPanelTwitterLogin}' />
  </g:FlowPanel>
</ui:UiBinder>